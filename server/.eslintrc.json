{
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["jasmine"],
  "env": {
    "es6": true,
    "commonjs": true,
    "node": true,
    "mocha": true,
    "browser": true,
    "jquery": true,
    "jasmine": true
  },
  "rules": {
    "arrow-body-style": 0,
    "block-scoped-var": 2,
    "no-useless-catch": 0,
    "no-control-regex": 0,
    "no-useless-escape": 0,
    "no-extra-boolean-cast": 0,
    "semi": [2, "always"],
    "quotes": [2, "single", {
      "avoidEscape": true
    }]
  }
}